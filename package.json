  "peerDependencies": {
    "react": ">=17.x"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "@types/react-dom": "17.0.13",
    "@vitejs/plugin-react": "1.2.0",
    "babel-eslint": "10.1.0",
